{
  "expo": {
    "name": "Shisha Delivery",
    "slug": "shisha-delivery",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "shisha-delivery",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#F5F5F0"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shisha.delivery",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to deliver your order.",
        "NSLocationAlwaysUsageDescription": "Drivers need background location for delivery tracking."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#F5F5F0"
      },
      "package": "com.shisha.delivery",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-asset",
      "expo-font",
      [
        "expo-notifications",
        {
          "color": "#1A1A2E"
        }
      ]
    ]
  }
}
